{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyMaxRetries": 5,
    "healthcheck": {
      "enabled": true,
      "interval": 30000,
      "timeout": 10000,
      "startPeriod": 10000,
      "successThreshold": 1,
      "failureThreshold": 3
    }
  }
}
